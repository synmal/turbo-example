<%= turbo_frame_tag dom_id(todo), class: 'card col-md-4' do %>
  <%= content_tag :div, class: 'card-body' do %>
    <%= turbo_frame_tag "todo_#{todo.id}_todo_items" do %>
      <%= render partial: 'todos/todo_items/todo_item', collection: todo.todo_items, as: :item %>
    <% end %>
    <%= link_to new_todo_todo_item_path(todo_id: todo.id), class: 'btn btn-primary btn-sm mt-2', data: { turbo_stream: true } do %>
      <i class="fa-solid fa-plus"></i>
    <% end %>
  <% end %>
<% end %>