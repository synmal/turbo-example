<%= turbo_frame_tag dom_id(item), class: 'd-flex gap-3 justify-content-between mb-1', data: { controller: 'todo-items', action: 'mouseover->todo-items#showActions mouseout->todo-items#hideActions' } do %>
  <p class="m-0"><%= item.description %></p>
  <%= content_tag :div, class: 'd-none gap-2', data: { todo_items_target: 'action' } do %>
    <%= link_to edit_todo_todo_item_path(todo_id: item.todo_id, id: item.id), data: { turbo_stream: true }, class: 'text-body' do %>
      <i class="fa-solid fa-pen-to-square"></i>
    <% end %>
    <%= link_to todo_todo_item_path(todo_id: item.todo_id, id: item.id), data: { turbo_stream: true, turbo_method: :delete }, class: 'text-body' do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>
  <% end %>
<% end %>