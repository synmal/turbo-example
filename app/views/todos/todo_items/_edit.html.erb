<%# Variables: %>
<%# todo %>
<%# todo_item %>
<%= form_with url: todo_todo_item_path(todo_id: todo.id, id: todo_item.id), class: 'd-flex gap-2 mt-2', model: todo_item, data: { controller: 'form', form_target: 'form', action: 'turbo:submit-end->form#reset' } do |f| %>
  <%= f.text_field :description, class: 'form-control form-control-sm', placeholder: 'Todo Description' %>
  <%= content_tag :div, class: 'd-flex gap-1' do %>
      <%= button_tag class: 'btn btn-primary btn-sm', type: 'submit' do %>
        <i class="fa-solid fa-pen-to-square"></i>
      <% end %>
      <%= link_to todo_todo_item_path(todo_id: todo.id, id: todo_item.id), class: 'btn btn-danger btn-sm', data: { turbo_stream: true, turbo_prefetch: true } do %>
        <i class="fa-solid fa-xmark"></i>
      <% end %>
    <% end %>
<% end %>