<%= turbo_frame_tag('homepage') do %>
  <%= content_tag :div, data: { controller: 'loader', loader_target: 'container' }, class: "homepage--container" do %>
    <%= link_to 'Add Todo', new_todo_path, class: 'btn btn-primary', data: { turbo_prefetch: false, turbo_stream: true } %>
    <%= content_tag :div, class: 'container' do %>
      <%= turbo_frame_tag('todos-container', class: 'row mt-3', src: todos_path(format: :turbo_stream)) do %>
        <%= content_tag :div, class: 'align-self-center mx-auto col-xs-12' do %>
          <i class="fa-solid fa-circle-notch fa-spin fa-2xl"></i>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
